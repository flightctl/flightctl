[Unit]
Description=Flight Control API Initialization
PartOf=flightctl.target
After=flightctl-certs-init.service
Wants=flightctl-certs-init.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=-/usr/bin/flightctl-standalone aap create-oauth-application
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=flightctl.target
